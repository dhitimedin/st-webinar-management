{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "st-webinar-management/webinar",
	"title": "Webinar",
	"icon": "megaphone",
	"category": "common",
	"keywords": ["webinar", "presentation", "event"],
	"textdomain": "st-webinar-management",
	"attributes": {
		"webinarId": {
		 	"type": "number"
		},
		"title": {
			"type": "string"
		},
		"subtitle": {
			"type": "string"
		},
		"thumbnail": {
			"type": "object"
		},
		"startDate": {
			"type": "string"
		},
		"endDate": {
			"type": "string"
		},
		"duration": {
			"type": "string"
		},
		"description": {
			"type": "string",
			"source": "html",
			"selector": "p"
		},
		"registrationForm": {
			"type": "string"
		},
		"streamingLink": {
			"type": "string"
		},
		"speakers": {
			"type": "array",
			"source": "query",
			"query": {
				"id":{
					"type": "integer"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"avatar_urls":{
					"type": "string"
				}
			},
			"default": []
		}
	},
    "editorScript": "file:./js/webinar.min.js",
	"style": "file:./css/webinar.min.css",
    "supports": {
		"anchor": true
   	}
}
